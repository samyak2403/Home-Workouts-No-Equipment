<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorTheme"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/side_margin">

    <com.github.jhonnyx2012.horizontalpicker.HorizontalPicker
        android:id="@+id/dtpWeightSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16dp"
        android:layout_marginTop="@dimen/space_24dp"
        android:layout_marginEnd="@dimen/space_16dp"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/edKG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/side_margin"
            android:layout_toStartOf="@+id/txtUnit"
            android:inputType="numberDecimal"
            android:hint="IN"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorGray"
            android:imeOptions="actionDone"
            android:textSize="@dimen/text_size_22" />

        <TextView
            android:id="@+id/txtUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KG"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/space_8dp"
            android:background="@drawable/ract_theme_select"
            android:padding="@dimen/space_8dp"
            android:layout_toStartOf="@+id/txtLB"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/txtLB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/main_margin_right"
            android:background="@drawable/ract_gray"
            android:padding="@dimen/space_8dp"
            android:text="LB"
            android:textSize="@dimen/text_size_18"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_16dp"
        android:layout_marginTop="@dimen/space_32dp"
        android:layout_marginEnd="@dimen/space_0dp">

        <Button
            android:id="@+id/btnChooseUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingStart="@dimen/space_4dp"
            android:paddingEnd="@dimen/space_4dp"
            android:text="Choose Unit"
            android:visibility="gone"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btnOkay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/btnSave"
            android:background="@android:color/transparent"
            android:paddingStart="@dimen/space_4dp"
            android:paddingEnd="@dimen/space_0dp"
            android:text="Cancel"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:paddingStart="@dimen/space_4dp"
            android:paddingEnd="@dimen/space_4dp"
            android:text="Save"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@color/colorTheme"
        android:padding="@dimen/space_24dp" >

    <TextView
            android:id="@+id/txt_dl_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/space_8dp" />

    <RadioGroup
            android:id="@+id/rgDlWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8dp" >

        <RadioButton
                android:id="@+id/rbDlWeight1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lbs"
                android:gravity="center"
                android:paddingStart="@dimen/space_24dp"
                android:textColor="@color/colorWhite"
            android:buttonTint="@color/colorButton"
                android:textSize="@dimen/text_size_18"
                android:layout_marginTop="@dimen/side_margin" />

        <RadioButton
                android:id="@+id/rbDlWeight2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:gravity="center"
            android:buttonTint="@color/colorButton"
                android:paddingStart="@dimen/space_24dp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_18"
                android:layout_marginTop="@dimen/space_16dp" />

    </RadioGroup >

</LinearLayout >

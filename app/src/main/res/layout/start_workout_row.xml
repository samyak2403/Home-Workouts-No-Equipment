<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtWorkoutTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/bebas"
        android:padding="8dp"
        android:text="@string/demo_time"
        android:textColor="@color/colorGray"
        android:textSize="32sp"
        android:textStyle="bold"
        android:visibility="gone"
        />

    <ViewFlipper
        android:id="@+id/viewfliperWorkout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtWorkoutTime"
        android:layout_above="@+id/txtWorkoutTitle"
        android:padding="48dp"/>

    <TextView
        android:id="@+id/txtWorkoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtWorkoutDetails"
        android:layout_marginStart="@dimen/space_16dp"
        android:fontFamily="@font/oswald_bold"
        android:padding="0dp"
        android:text="@string/demo_time"
        android:textColor="@color/colorTheme"
        android:textSize="@dimen/text_size_26"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txtWorkoutDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/space_16dp"
        android:padding="0dp"
        android:text="@string/demo_time"
        android:layout_marginBottom="@dimen/space_10dp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_16"
        android:textStyle="normal" />

</RelativeLayout>

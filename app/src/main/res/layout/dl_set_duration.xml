<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorTheme"
    android:padding="@dimen/space_8dp">

    <TextView
        android:id="@+id/tvDlDurationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_8dp"
        android:layout_marginTop="@dimen/space_8dp"
        android:textColor="@color/colorWhite"
        android:text="Set duration (10 ~ 15 secs)"
        android:textSize="@dimen/text_size_20" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space_16dp">

        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/space_16dp"
            android:src="@drawable/ic_baseline_arrow_left_24" />

        <TextView
            android:id="@+id/tvDurations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/space_8dp"
            android:layout_marginEnd="@dimen/space_8dp"
            android:textColor="@color/colorWhite"
            android:layout_toEndOf="@+id/btnPrev"
            android:text="15"
            android:textSize="@dimen/text_size_36"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSecTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDurations"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/space_16dp"
            android:text="Secs"
            android:textSize="@dimen/text_size_14" />

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tvDurations"
            android:background="@android:color/transparent"
            android:padding="@dimen/space_16dp"
            android:src="@drawable/ic_baseline_arrow_right_24" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8dp">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tvSet"
            android:padding="@dimen/space_16dp"
            android:text="@string/btn_cancel"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/tvSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/space_8dp"
            android:padding="@dimen/space_16dp"
            android:text="@string/btn_set"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

</LinearLayout>

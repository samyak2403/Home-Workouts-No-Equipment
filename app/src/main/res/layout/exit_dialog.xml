<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"

            android:text="Exit App?"
            android:textColor="#8F8E8E"
            android:textSize="17sp"
            android:textStyle="bold"
            />

        <thehexcoders.google.android.ads.nativetemplates.TemplateView
            android:id="@+id/my_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_exit"
            android:layout_marginTop="16dp"

            android:visibility="gone"
            app:gnt_template_type="@layout/gnt_medium_template_view" />

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/my_template"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toStartOf="@+id/tv_yes"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:textColor="#B5B3B3"
            android:gravity="center"
            android:padding="10dp"
            android:text="NO"

            android:textSize="17sp"
             />

        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/my_template"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#8F8E8E"
            android:layout_marginBottom="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"

            android:focusable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="YES"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/my_template"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"

            android:layout_marginBottom="20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:textColor="#8F8E8E"
            android:focusable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="Rate"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

<!--        <item name="android:keepScreenOn">true</item>-->
        <item name="android:statusBarColor">#121519</item>
<!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:windowDisablePreview">false</item>

    </style>



    <style name="drawer_card">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/size_8</item>
        <item name="android:layout_marginStart">@dimen/size_8</item>
        <item name="android:layout_marginEnd">@dimen/size_8</item>
        <item name="android:layout_marginRight">@dimen/size_8</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:background">@drawable/ad_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>


    <style name="drawer_card2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ad_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>




    <!-- Full screen theme -->
    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorTheme</item>
        <item name="colorAccent">@color/colorAccent</item>

<!--        <item name="android:keepScreenOn">true</item>-->
        <item name="android:textColor">@color/colorWhite</item>
<!--        <item name="android:windowFullscreen">true</item>-->
    </style>


    <style name="AppTheme_Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@drawable/splash_logo</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
        <item name="android:enforceNavigationBarContrast" tools:ignore="NewApi">false</item>
    </style>

    <!-- application theme color status bar  . -->
    <style name="AppThemeStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/colorBlack</item>
<!--        <item name="android:keepScreenOn">true</item>-->

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@color/colorTheme</item>
    </style>




    <style name="AppThemeStatusBarReport" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/colorWhite</item>
        <!--        <item name="android:keepScreenOn">true</item>-->

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@color/colorTheme</item>
    </style>


    <style name="AppThemeStatusBar2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/colorWhite</item>

        <!--        <item name="android:keepScreenOn">true</item>-->

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@color/colorTheme</item>
    </style>


    <!-- Base application color white status bar -->
    <style name="AppThemeStatusBarWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/colorWhite</item>

<!--        <item name="android:keepScreenOn">true</item>-->

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
    </style>


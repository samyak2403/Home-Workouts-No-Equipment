    <style name="DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorTheme</item>
    </style>

    <!-- Setting Screen Style -->
    <style name="setting_sub_Title">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="setting_tv_sub">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/space_16dp</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Dialog sound option -->
    <style name="dialog_sound_option_tv">
